        <servlet-name>ProductDetailController</servlet-name>
        <servlet-class>com.nguyentienthuat.controller.ProductDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerDetailController</servlet-name>
        <servlet-class>com.nguyentienthuat.controller.CustomerDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>com.nguyentienthuat.controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillDetailController</servlet-name>
        <servlet-class>com.nguyentienthuat.controller.BillDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/HomeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/ProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/CustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillController</servlet-name>
        <url-pattern>/BillController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailController</servlet-name>
        <url-pattern>/ProductDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerDetailController</servlet-name>
        <url-pattern>/CustomerDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/CartController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillDetailController</servlet-name>
        <url-pattern>/BillDetailController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <ejb-local-ref>
        <ejb-ref-name>BillFacade</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>com.nguyentienthuat.sessionbean.BillFacadeLocal</local>
        <ejb-link>QLBHdemo-ejb.jar#BillFacade</ejb-link>
    </ejb-local-ref>
